CC := g++
SRCDIR := src
OBJDIR := bin
BINDIR := bin

MAIN := $(SRCDIR)/trabalho.cpp

SRCEXT := cpp
SOURCES := $(shell find $(SRCDIR) -type f -name *.$(SRCEXT))
OBJECTS := $(patsubst $(SRCDIR)/%,$(OBJDIR)/%,$(SOURCES:.$(SRCEXT)=.o))

# -g debug
CFLAGS := -g -Wall -O3 -std=c++11

$(OBJDIR)/%.o: $(SRCDIR)/%.$(SRCEXT)
	@mkdir -p $(@D)
	$(CC) $(CFLAGS) -c -o $@ $<

main: $(OBJECTS)
	@mkdir -p $(BINDIR)
	$(CC) $(CFLAGS) $(MAIN) $^ -o $(BINDIR)/trabalho

all: main

run: main
	$(BINDIR)/trabalho

clean:
	$(RM) -r $(OBJDIR)/* $(BINDIR)/*

